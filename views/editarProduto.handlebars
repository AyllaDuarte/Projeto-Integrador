<main class="cadastro">
  <header class="cadastro__titulo">
    <h1 class="cadastro-main__title"> Edição de Produto </h1>
  </header>
  <div class="cadastro__form">
    
    <form action="/editar-produto/" method="post">
      <div class="cadastro__box">
        <label class="cadastro__label" for="id_prod">ID do produto</label>
        <input class="cadastro__input" readonly  type="text" name="id_prod" id="id_prod" value="{{products.id_prod}}">
      </div>
      <div class="cadastro__box">
          <label class="cadastro__label" for="name_prod"> Nome </label>
          <input class="cadastro__input" type="text" id="name_prod" name="name_prod" value="{{products.name_prod}}">
          <span role="alert" id="cadastro__input-err" aria-hidden="true">
            Por favor insira os dados
           </span>
      </div>
      <div class="cadastro__box">
          <label class="cadastro__label" for="category_prod"> Categoria </label>
          <input class="cadastro__input" step="0.00" type="text" id="category_prod" name="category_prod" value="{{products.category_prod}}"> </input>
      </div>
      <div class="cadastro__box">
          <label class="cadastro__label" for="description_prod"> Descrição </label>
          <input class="cadastro__input" type="text" id="description_prod" name="description_prod" value="{{products.description_prod}}">
      </div>
     <div class="cadastro__box">
          <label class="cadastro__label" for="stock_prod"> Estoque </label>
          <input class="cadastro__input" type="text" id="stock_prod" name="stock_prod" placeholder="Estoque do produto" value="{{products.stock_prod}}">
      </div>
      <div class="cadastro__box">
          <label class="cadastro__label" for="image_prod"> Fotos </label>
          <input class="cadastro__input" type="file" id="image_prod" name="image_prod" value="{{products.image_prod}}">
      </div>
      <div class="cadastro__box">
          <label class="cadastro__label" for="price_prod"> Preço </label>
          <input class="cadastro__input" type="number" id="price_prod" name="price_prod" value="{{products.price_prod}}">
      </div>
      <input class="cadastro--btn" type="submit" value="Editar">
    </form>
  </div>
    <div class="cadastro--btn-back">
      <a href="#"> Voltar </a>
    </div>
  </div>
</main>